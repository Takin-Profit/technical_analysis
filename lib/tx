// Indi FUnctions {

tci(src) => ema((src-ema(src, 9)) / (0.025 * ema(abs(src - ema(src, 9)), 9)), 6)+50
mf(src) => rsi(sum(volume * (change(src) <= 0 ? 0 : src), 3), sum(volume * (change(src) >= 0 ? 0 : src), 3))
willy(src) => 60 * (src - highest(src, 6)) / (highest(src, 6) - lowest(src, 6)) +80
csi(src) => avg(rsi(src,3), tsi(src0,9,6)*50+50)
phoenix(src) => avg(tci(src),csi(src),mf(src), willy(src))
tradition(src) => avg(tci(src), mf(src), rsi(src, 3))
phx1 = math.avg(phoenix(hlc3), tradition(hlc3))
phx2 = ta.sma(phx1, 6)
lsma = ta.linreg(phx1, 32, 0)